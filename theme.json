                },
                "Purple": {
                    "--focus": ["70, 23, 180", "all"]
                },
                "Magenta": {
                    "--focus": ["140, 0, 149", "all"]
                },
                "Custom": {
                    "--focus": ["var(--metrosteam-custom_rgb)", "all"]
                }
            },
            "components": [
                {
                    "name": "Accent Color",
                    "type": "color-picker",
                    "on": "Custom",
                    "default": "#6624E2",
                    "css_variable": "metrosteam-custom",
                    "tabs": ["all"]
                }
            ]
        },
        "Decal": {
            "type": "dropdown",
            "values": {
                "Fish": {
                    "--decal": ["url(https://rosetheflower.github.io/MetroSteam/decals/1.png)", "all"],
                    "--decalXY": ["right top", "all"]
